  template_type: updating-template
  uuid_pool: UUID-Pool
  lan_connectivity_policy: Cntr-FC-Boot
  boot_policy: Razor_Boot
  maintenance_policy: User_Ack_Policy
  server_pool: General-Server_Pool
  bios_policy: Docker
- name: DEE-DTR
  template_type: updating-template
  uuid_pool: UUID-Pool
  lan_connectivity_policy: Cntr-FC-Boot
  boot_policy: Razor_Boot
